<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhou.shop.mapper.IssueMapper">
    <resultMap id="issueModule" type="com.zhou.shop.dto.IssueModuleDto">
        <result column="tn" property="issueModuleEn"/>
        <result column="tc" property="issueModuleCh"/>
    </resultMap>

    <select id="getIssueModule" resultMap="issueModule">
        SELECT TABLE_NAME tn, TABLE_COMMENT tc
        from information_schema.`TABLES`
        WHERE TABLE_SCHEMA = 'shop'
    </select>

    <select id="retrieveByIssueDescription" resultType="com.zhou.shop.entity.Issue">
        select *
        from issue
        where issue_description like '%${issueDescription}%'
    </select>

    <select id="readEffectiveIssue" resultType="com.zhou.shop.entity.Issue">
        select *
        from issue
        where issue_status = '0'
    </select>

    <update id="updateIssueStatus">
        update issue
        set issue_status = #{issueStatus}
        where issue_id = #{issueId};
    </update>
</mapper>
